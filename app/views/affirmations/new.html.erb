<div class="col-md-6 offset-md-3 mt-5">
    <% if flash[:notice] %>
      <div class="notice"><%= flash[:notice] %></div>
    <% end %>
    <h1>Submit an Affirmation</h1>

    <%= form_for @affirmation  do |f| %>

        <div class="form-group">
            <%#= f.label :affirmation%><br />
            <%= f.text_area :affirmation, placeholder: "Submit your affirmation", id: "affirmation", class: "form-control", for: "affirmation" %>
        </div>
        <%= f.submit "Create", class: "btn cta"%>
    <% end %>
</div>